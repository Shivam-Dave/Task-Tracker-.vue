{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "setupFiles": ["dotenv/config"],
  "globals": {
    "jest": {
      "verbose": true,
      "testEnvironment": "node",
      "globalSetup": "<rootDir>/test/global-setup.ts",
      "testTimeout": 30000
    }
  }
}
